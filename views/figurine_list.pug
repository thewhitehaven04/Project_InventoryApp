extends layout

block content

  h1= title

  each item in items
    div(class="container card card-body d-flex flex-row mb-4")
      div(class="col-2")
        img(src=item.imageUrl alt="Image" class="img-thumbnail img-fluid rounded")
      
      div(class="col-10")
        div(class="container d-flex flex-row justify-content-between")
          
          div.container 
            a(href=item.url class="card-title flex-grow-1")= item.name
            
            div(class="d-flex flex-column flex-align-items-start")
              span="Age category: " + item.age
              span="Figurine type: " + item.category
          
          div(class="d-flex flex-grow-0 flex-column align-items-end")
            span $#{item.price}

  a(href='/item/new')
    button(type="button" class="btn btn-outline-primary") Add new item 